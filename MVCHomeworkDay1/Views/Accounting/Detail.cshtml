@using MVCHomeworkDay1.ViewModels;
@using MVCHomeworkDay1.My;
@model IList<MVCHomeworkDay1.ViewModels.AccountingDetailViewModels>
           
@{
    Layout = "";
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{
                int detailCount = 1;

                foreach (var item in Model)
                {
                    <tr>
                        <td>@detailCount</td>
                        <td> 
                            
                            @{
                                
                                int enumValue = Convert.ToInt32(item.Type);
                                string value = EnumExtension.GetDescription((AccountType)enumValue);
                                string fontColor = ((AccountType)enumValue == AccountType.income) ? "blue" : "red";
                                <span><font color="@fontColor">@value</font></span>
                            }
                        </td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td>@item.Sum</td>
                    </tr>
                    detailCount += 1;
                }
            }
      
        </table>
    </div>
</div>